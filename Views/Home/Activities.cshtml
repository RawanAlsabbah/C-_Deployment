@model Actvity
<style>

</style>
<header>
    <p>Dojo Activity Center

        <a asp-action="Dashboard" asp-controller="Home">Home</a> - <a asp-action="LogOut"
            asp-controller="Home">LogOut</a>
    </p>

</header>

<div class="row">
    <div class="col-md-6">
        <h1>@Model.Title</h1>
        <p>Event Coordinator: @Model.HostedBy.Name</p>
        <p>Descriptipn: @Model.Descriptipn</p>
        <h3>Partspents :</h3>
        <ul>
            @foreach (var j in Model.JoinList)
            {
                <li>@j.join.Name </li>
            }
        </ul>
        @if (Model.HostedBy.UserId == ViewBag.User.UserId)
        {

            <a asp-action="Delete" asp-controller="Home" asp-route-activityId="@Model.ActvityId"><button
                class="btn btn-sm btn-danger">Delete</button></a>
        }
        else if (Model.JoinList.Any(f => f.UserId == ViewBag.User.UserId))
        {
            <a asp-action="Leave" asp-controller="Home" asp-route-activityId="@Model.ActvityId"><button
                class="btn btn-sm btn-warning">Leave</button></a>
        }
        else
        {
            <a asp-action="Join" asp-controller="Home" asp-route-activityId="@Model.ActvityId"><button
                class="btn btn-sm btn-primary">Join</button></a>
        }
    </div>
</div>